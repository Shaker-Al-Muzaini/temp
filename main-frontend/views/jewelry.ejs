<!-- Start Banner Area -->
<div class="banner banner-single-post post-formate post-standard alignwide">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <!-- Start Single Slide  -->
        <div class="content-block">
          <!-- Start Post Thumbnail  -->
          <div class="post-thumbnail">
            <img
              src="/uploads/jewelry/<%= jewelryPosts[0].banner_image %>"
              alt="Post Images"
            />
          </div>
          <!-- End Post Thumbnail  -->
          <!-- Start Post Content  -->
          <div class="post-content">
            <div class="post-cat">
              <div class="post-cat-list">
                <a class="hover-flip-item-wrapper" href="#">
                  <span class="hover-flip-item">
                    <span data-text="FEATURED POST">FEATURED POST</span>
                  </span>
                </a>
              </div>
            </div>
            <h1 class="title"><%= jewelryPosts[0].title%></h1>
            <!-- Post Meta  -->
          </div>
          <!-- End Post Content  -->
        </div>
        <!-- End Single Slide  -->
      </div>
    </div>
  </div>
</div>
<!-- End Banner Area -->

<!-- Start Post List Wrapper  -->
<div class="axil-post-list-area axil-section-gap bg-color-grey mt--30">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-xl-8">
        <!-- Start Post Grid  -->
        <% for(let jewelryPost of jewelryPosts.slice(1)) { %>
        <div class="content-block post-grid post-grid-large mt--30">
          <div class="post-thumbnail">
            <a href="/jewelry/details/<%= jewelryPost.classified_slug %>">
              <img
                src="/uploads/jewelry/<%= jewelryPost.banner_image %>"
                alt="Post Images"
              />
            </a>
          </div>
          <div class="post-grid-content">
            <div class="post-content">
              <div class="post-cat">
                <div class="post-cat-list">
                  <a class="hover-flip-item-wrapper" href="#">
                    <span class="hover-flip-item">
                      <span data-text="DESIGN">DESIGN</span>
                    </span>
                  </a>
                </div>
              </div>
              <h3 class="title">
                <a href="/jewelry/details/<%= jewelryPost.classified_slug %>"><%= jewelryPost.title %></a>
              </h3>
              <div class="post-meta-wrapper">
                <div class="post-meta">
                  <div class="content">
                    <ul class="post-meta-list">
                      <li><%= jewelryPost.created_date_time%></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <!-- Start Post Grid  -->
        <!-- Pagination Start -->
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center pagination-lg">
            <li class="page-item disabled">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            <% for(let page of pagination) { %> <% if (currentPage == page) { %>
            <li class="page-item <%= 'active' %>">
              <a class="page-link" href="?page=<%= page %>"
                ><%= page %></a
              >
            </li>
            <% } else { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= page %>"
                ><%= page %></a
              >
            </li>
            <% } %> <% } %>
            <li class="page-item disabled">
              <a class="page-link" href="" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
          </ul>
        </nav>
        <!-- Pagination End -->
      </div>
      <div class="col-lg-4 col-xl-4 mt_md--40 mt_sm--40">
        <!-- Start Sidebar Area  -->
        <div class="sidebar-inner">
          <!-- Start Single Widget  -->
          <div class="axil-single-widget widget widget_categories mb--30">
            <ul>
              <% for(let category of categories) { %>
              <li class="cat-item">
                <a href="/jewelry/c/<%= category.url_slug %>" class="inner">
                  <div class="thumbnail">
                  </div>
                  <div class="content">
                    <h5 class="title"><%= category.title %></h5>
                  </div>
                </a>
              </li>
              <% } %>
            </ul>
          </div>
          <!-- End Single Widget  -->

          <!-- Start Single Widget  -->
          <div class="axil-single-widget widget widget_search mb--30">
            <h5 class="widget-title">Search</h5>
            <form action="#">
              <div class="axil-search form-group">
                <button type="submit" class="search-button">
                  <i class="fal fa-search"></i>
                </button>
                <input type="text" class="form-control" placeholder="Search" />
              </div>
            </form>
          </div>
          <!-- End Single Widget  -->

          <!-- Start Single Widget  -->
          <div class="axil-single-widget widget widget_postlist mb--30">
            <h5 class="widget-title">Popular on AWJ</h5>
            <!-- Start Post List  -->
            <div class="post-medium-block">


              <% for(let post of popularPosts) { %>
                <!-- Start Single Post  -->
                <div class="content-block post-medium mb--20">
                  <div class="post-thumbnail">
                    <a href="/<%= post.URLPath %>/details/<%= post.classified_slug %>">
                      <img
                        src="/uploads/<%= post.uploadsDirName %>/<%= post.banner_image %>"
                        alt="Post Images"
                      />
                    </a>
                  </div>
                  <div class="post-content">
                    <h6 class="title">
                      <a href="/<%= post.URLPath %>/details/<%= post.classified_slug %>">
                        <%= post.title %>
                      </a>
                    </h6>
                    <div class="post-meta">
                      <ul class="post-meta-list">
                        <li><%= post.created_date_time %></li>
                      </ul>
                    </div>
                  </div>
                </div>
                <!-- End Single Post  -->
                <% } %>
                
            </div>
            <!-- End Post List  -->
          </div>
          <!-- End Single Widget  -->


          <!-- Start Single Widget  -->
          <div class="axil-single-widget widget widget_social mb--30">
            <h5 class="widget-title">Stay In Touch</h5>
            <!-- Start Post List  -->
            <ul class="social-icon md-size justify-content-center">
              <li>
                <a href="<%= socialMediaLinks.facebookLink.setting.value %>"><i class="fab fa-facebook-f"></i></a>
              </li>
              <li>
                <a href="<%= socialMediaLinks.instagramLink.setting.value %>"><i class="fab fa-instagram"></i></a>
              </li>
              <li>
                <a href="<%= socialMediaLinks.twitterLink.setting.value %>"><i class="fab fa-twitter"></i></a>
              </li>
            </ul>
            <!-- End Post List  -->
          </div>
          <!-- End Single Widget  -->

          <!-- Start Single Widget  -->
          <div class="axil-single-widget widget widget_postlist mb--30">
            <h5 class="widget-title">Recent Post</h5>
            <!-- Start Post List  -->
            <div class="post-medium-block">
              
              <% for(let jewelryPost of firstThreeJewelryPosts) { %>
                <!-- Start Single Post  -->
                <div class="content-block post-medium mb--20">
                  <div class="post-content">
                    <h6 class="title">
                      <a href="/jewelry/details/<%= jewelryPost.classified_slug %>"><%= jewelryPost.title %></a>
                    </h6>
                    <div class="post-meta">
                      <ul class="post-meta-list">
                        <li><%= jewelryPost.created_date_time %></li>
                      </ul>
                    </div>
                  </div>
                </div>
                <!-- End Single Post  -->
                <% } %>

            </div>
            <!-- End Post List  -->
          </div>
          <!-- End Single Widget  -->
        </div>
        <!-- End Sidebar Area  -->
      </div>
    </div>
  </div>
</div>
<!-- End Post List Wrapper  -->