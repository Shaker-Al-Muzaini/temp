<!-- Start Banner Area -->
<div class="container mt--30">
  <section class="row">
    <!-- Start Post List  -->
    <% for(let magazinePost of magazinePosts.slice(1)) { %>
      <div class="content-block post-list-view mt--30">
        <div class="post-thumbnail">
          <a href="/ar/magazine/details/<%= magazinePost.classified_slug %>">
            <img src="/uploads/magazines/<%= magazinePost.banner_image %>" alt="Post Images">
          </a>
        </div>
        <div class="post-content">
          <div class="post-cat">
            <div class="post-cat-list">
              <a class="hover-flip-item-wrapper" href="#">
                <span class="hover-flip-item">
                  <span data-text="مجلة">مجلة</span>
                </span>
              </a>
            </div>
          </div>
          <h4 class="title"><a href="/ar/magazine/details/<%= magazinePost.classified_slug %>">
              <%= magazinePost.title%>
            </a></h4>
          <div class="post-meta-wrapper">
            <div class="post-meta">
              <div class="content">
                <ul class="post-meta-list">
                  <li>
                    <%= magazinePost.created_date_time%>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
        <!-- End Post List  -->
        <!-- Pagination Start -->
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center pagination-lg">
            <li class="page-item disabled">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            <% for(let page of pagination) { %>
              <% if (currentPage==page) { %>
                <li class="page-item <%= 'active' %>">
                  <a class="page-link" href="?page=<%= page %>">
                    <%= page %>
                  </a>
                </li>
                <% } else { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= page %>">
                      <%= page %>
                    </a>
                  </li>
                  <% } %>
                    <% } %>
                      <li class="page-item disabled">
                        <a class="page-link" href="" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                        </a>
                      </li>
          </ul>
        </nav>
        <!-- Pagination End -->
        <!-- Start Sidebar Area  -->
        <div class="sidebar-inner">

          <!-- Start Single Widget  -->
          <div class="axil-single-widget widget widget_postlist mb--30" style="margin-top: 20px;">
            <h5 class="widget-title">الأكثر شهرة</h5>
            <!-- Start Post List  -->
            <div class="post-medium-block">

              <% for(let post of popularPosts) { %>
                <!-- Start Single Post  -->
                <div class="content-block post-medium mb--20">
                  <div class="post-thumbnail">
                    <a href="/ar/<%= post.URLPath %>/details/<%= post.classified_slug %>">
                      <img src="/uploads/<%= post.uploadsDirName %>/<%= post.banner_image %>" alt="Post Images" />
                    </a>
                  </div>
                  <div class="post-content">
                    <h6 class="title">
                      <a href="/ar/<%= post.URLPath %>/details/<%= post.classified_slug %>">
                        <%= post.title %>
                      </a>
                    </h6>
                    <div class="post-meta">
                      <ul class="post-meta-list">
                        <li>
                          <%= post.created_date_time %>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                <!-- End Single Post  -->
                <% } %>

            </div>
            <!-- End Post List  -->

          </div>
          <!-- End Single Widget  -->

        </div>
        <!-- End Sidebar Area  -->
  </section>
</div>
<!-- End Banner Area -->