<!-- Start Banner Area -->
<h1 class="d-none"><%= newsPosts[0].title %></h1>
<div class="slider-area bg-color-grey">
  <div class="axil-slide slider-style-1">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="slider-activation axil-slick-arrow mb--30">
            <!-- Start Single Slide  -->
            <div class="content-block">
              <!-- Start Post Thumbnail  -->
              <div class="post-thumbnail">
                <a href="/news/details/<%= newsPosts[0].classified_slug %>">
