                        <li><%= newsPosts[0].created_date_time %></li>
                      </ul>
                    </div>
                  </div>

                  <div class="read-more-button cerchio">
                    <a
                      class="axil-button button-rounded hover-flip-item-wrapper"
                      href="/news/details/<%= newsPosts[0].classified_slug %>"
                    >
                      <span class="hover-flip-item">
                        <span data-text="Read Post">Read Post</span>
                      </span>
                    </a>
                  </div>
                </div>
              </div>
              <!-- End Post Content  -->
            </div>
            <!-- End Single Slide  -->

